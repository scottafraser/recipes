@{
    ViewData["Title"] = "Create Recipe";
}

<form action="/recipes/index" method="post">
    <h1>Create A New Recipe</h1>
    <div class='form-group'>
        <label for='name'><h4>Recipe Name</h4></label>
        <input name='name' type="text" class='form-control' required>
    </div>
    <div id="ingredient-box" class='form-group'>
        <label for='ingredients'><h4>Ingredients</h4></label>
        <input name='ingredients' type="text" class="form-control form-control-lg"  placeholder="bread, butter, salt, ..." required>
    </div>
    <div class='form-group'>
        <label for='tags'><h4>#tags</h4></label>
        <input name='tags' type="text" class='form-control' placeholder="#awesome">
    </div>
    <button type="submit" class="btn btn-lg btn-info">Add Steps Now!</button> 
</form>


